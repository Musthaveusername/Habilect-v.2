@model Habilect.Doctors

@{
    ViewBag.Title = "Patients";
}

<h2>@ViewBag.Title</h2>

    <h4>Doctor <b>@Html.DisplayFor(model => model.SecondName)</b>'s patients</h4>
    <table class="table">
        <tr>
            <th>
                ID
            </th>
            <th>
                Patient's name
            </th>
            <th>
            </th>
        </tr>
        @foreach (var item in Model.Patients) { 
            <tr>
                <th>
                    @Html.DisplayFor(modelItem => item.Id)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td align="center">
                    <div class="btn-group">
                        <div class="btn-group">
                            @Html.ActionLink("Statistics", "Statistics", "Patients", new { id = item.Id }, new { @class = "btn btn-default" })
                        </div>
                        <div class="btn-group">
                            @Html.ActionLink("Schedule", "Schedule", "Patients", new { id = item.Id }, new { @class = "btn btn-default" })
                        </div>
                        <div class="btn-group">
                            @Html.ActionLink("Courses", "Courses", "Patients", new { id = item.Id }, new { @class = "btn btn-default" })
                        </div>
                    </div>
                </td>
            </tr>
        }
    </table>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>

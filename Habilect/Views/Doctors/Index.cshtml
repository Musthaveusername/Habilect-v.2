@model IEnumerable<Habilect.Doctors>

@{
    ViewBag.Title = "Doctors";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@*@if (Model.Count() == 0){

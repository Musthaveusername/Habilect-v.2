@model IEnumerable<Habilect.Patients>

@{
    ViewBag.Title = "Patients";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Name
        </th>
        <th>
            Doctor's surname
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <th>
            @Html.DisplayFor(modelItem => item.Id)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Doctors.SecondName)
        </td>
        <td align="center">
            <div class="btn-group">
                <div class="btn-group">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-default" })
                </div>
                <div class="btn-group">
                    @Html.ActionLink("Statistics", "Statistics", new { id = item.Id }, new { @class = "btn btn-default" })
                </div>
                <div class="btn-group">
                    @Html.ActionLink("Schedule", "Schedule", new { id = item.Id }, new { @class = "btn btn-default" })
                </div>
                <div class="btn-group">
                    @Html.ActionLink("Courses", "Courses", new { id = item.Id }, new { @class = "btn btn-default" })
                </div>
            </div>
        </td>
        <td align="right">
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger", @onfocus = "this.blur()" })
        </td>

    </tr>
}

</table>

@model IQueryable<PatientSchedule>
@{
    ViewBag.Title = "Date Schedule";
    foreach (var a in Model) {
        ViewBag.Date = a.PlanDate.Day.ToString() + "." + a.PlanDate.Month.ToString() + "." + a.PlanDate.Year.ToString();
        ViewBag.Patient = a.Patients.Name;
    }
}

<h2>@ViewBag.Title</h2>

<h4>Patient <b>@ViewBag.Patient</b></h4>
<h4>Date <b>@ViewBag.Date</b></h4>

<table class="table">
    <tr>
        <th>
            Course Order
        </th>
        <th>
            Name
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
        
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Courses.Name)
            </td>
            <td>
                @Html.ActionLink("Course Motions", "DisplayCourse", new { id = item.CourseId })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
